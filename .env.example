# ============================================
# ESSÊNCIA.ME - Variáveis de Ambiente
# ============================================
# IMPORTANTE: Copie este arquivo para .env e preencha os valores

# ============================================
# DATABASE (Supabase/PostgreSQL)
# ============================================
DATABASE_URL="postgresql://usuario:senha@host:5432/essencia_db"
DIRECT_URL="postgresql://usuario:senha@host:5432/essencia_db"

# ============================================
# AUTENTICAÇÃO (NextAuth.js)
# ============================================
NEXTAUTH_SECRET="gere-um-secret-aleatorio-aqui-com-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# ============================================
# STRIPE (Pagamentos)
# ============================================
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Planos Stripe
STRIPE_PLAN_BASIC="price_..."
STRIPE_PLAN_PROFESSIONAL="price_..."
STRIPE_PLAN_CLINIC="price_..."

# ============================================
# AWS S3 / Cloudflare R2 (Storage)
# ============================================
AWS_ACCESS_KEY_ID="..."
AWS_SECRET_ACCESS_KEY="..."
AWS_BUCKET_NAME="essencia-dev"
AWS_REGION="us-east-1"

# ============================================
# EMAIL (Resend)
# ============================================
RESEND_API_KEY="re_..."

# ============================================
# CRIPTOGRAFIA (Dados Sensíveis)
# ============================================
ENCRYPTION_KEY="gere-uma-chave-256-bits-aqui"

# ============================================
# MONITORING
# ============================================
SENTRY_DSN="https://..."

# ============================================
# FEATURES FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_TELEMEDICINE="false"
NEXT_PUBLIC_ENABLE_GENOGRAM="true"
NEXT_PUBLIC_ENABLE_AI_FEATURES="false"

# ============================================
# DEVELOPMENT
# ============================================
NODE_ENV="development"
