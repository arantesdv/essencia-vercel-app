// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================
// TENANT (Médico/Clínica)
// ============================================
model Tenant {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  crm       String
  specialty String
  subdomain String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  users    User[]
  patients Patient[]

  @@map("tenants")
}

// ============================================
// USER (Usuário do sistema)
// ============================================
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("USER") // USER, ADMIN
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("users")
}

// ============================================
// PATIENT (Paciente)
// ============================================
model Patient {
  id            String    @id @default(uuid())
  name          String
  cpf           String    @unique
  birthDate     DateTime
  gender        String?
  phone         String?
  email         String?
  address       String?
  city          String?
  state         String?
  zipCode       String?

  // Dados clínicos (serão criptografados na aplicação)
  allergies     String?
  medications   String?
  medicalHistory String?

  // Multi-tenancy
  tenantId      String

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relações
  tenant        Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("patients")
  @@index([tenantId])
  @@index([cpf])
}
